<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.chap4.mapper.TodoMapper">

  <select id="getTime" resultType="string">
    select now()
  </select>

  <insert id="insert">
    insert into testfull503db.tbl_todo (title,dueDate,writer) values (#{title},#{dueDate},#{writer})
  </insert>

  <select id="selectAll" resultType="com.example.chap4.domain.TodoVO">
    select * from testfull503db.tbl_todo order by tno desc
  </select>
</mapper>
